{# templates/figure/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Home - SnowTricks{% endblock %}

{% block body %}
    {# Hero section with background image and phrase accroche #}
    <section class="hero">
        <div class="hero-content">
            <h1 class="hero-text">Phrase accroche</h1>
        </div>
        <a href="#tricks-section" class="scroll-button">&#8595;</a>
    </section>

    {# Tricks section - anchor for the scroll #}
    <section id="tricks-section" class="main-content">
        <h1>Explore Snowboarding Tricks</h1>
        
        {# Displaying list of figures with additional structure for improved layout #}
        <ul class="figure-list">
            {% for figure in figures %}
                <li class="figure-list__item">
                    <a href="{{ path('figure_show', { 'id': figure.id }) }}" class="figure-link">
                        <h2>{{ figure.nom }}</h2>
                        <p>{{ figure.description|slice(0, 100) ~ '...' }}</p> {# Brief description #}
                    </a>
                </li>
            {% endfor %}
        </ul>

        {# Action buttons based on user authentication state #}
        <div class="action-buttons">
            {% if app.user %}
                <a href="{{ path('figure_new') }}" class="button button-primary">Create New Trick</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="button button-secondary">Login to Add Tricks</a>
            {% endif %}
        </div>
    </section>
{% endblock %}
