{% extends 'base.html.twig' %}

{% block title %}Créer une Nouvelle Figure{% endblock %}

{% block body %}
    <div class="figure-wrapper">
        <div class="figure-container">
            <h1 class="figure-title">Créer une Nouvelle Figure</h1>
            
            {{ form_start(form, {'attr': {'class': 'figure-form', 'enctype': 'multipart/form-data'}}) }}

                <div class="form-group">
                    {{ form_label(form.nom, 'Nom de la figure', {'label_attr': {'class': 'figure-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'figure-input'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'figure-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'figure-textarea'}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.categories, 'Catégorie', {'label_attr': {'class': 'figure-label'}}) }}
                    {{ form_widget(form.categories, {'attr': {'class': 'figure-select'}}) }}
                    {{ form_errors(form.categories) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.media, 'Médias', {'label_attr': {'class': 'figure-label'}}) }}
                    {{ form_widget(form.media, {'attr': {'class': 'figure-input', 'id': 'media-upload', 'multiple': 'multiple'}}) }}
                    {{ form_errors(form.media) }}
                </div>

                <div class="media-preview">
                    <h2>Médias Sélectionnés</h2>
                    <div id="media-preview" class="media-gallery"></div>
                </div>

                <button type="submit" class="figure-button">Créer</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
