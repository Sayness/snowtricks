{% extends 'base.html.twig' %}

{% block title %}{{ figure.nom }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/media-handler.js') }}"></script>
{% endblock %}

{% block body %}
<div class="hero-section">
    <img src="{{ asset('/uploads/media/' ~ figure.mediaFiles[0].url) }}" alt="{{ figure.nom }}">
    <div class="hero-overlay">
        <h1 class="hero-title">{{ figure.nom }}</h1>
    </div>
    {% if app.user %}
        <div class="edit-buttons">
            <a href="{{ path('figure_edit', {'id': figure.id}) }}" class="edit-button">
                <i class="fas fa-pencil-alt"></i>
            </a>
            <form action="{{ path('figure_delete', { id: figure.id }) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette figure ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete-figure-' ~ figure.id) }}">
                <button type="submit" class="action-button delete">
                    <i class="fas fa-trash"></i>
                </button>
            </form>
        </div>
    {% endif %}
</div>

<div class="container">
    {# Description Section #}
    <div class="description">
        {{ figure.description }}
    </div>

    {# Media Section with Toggle Button #}
    <button id="seeMediaBtn" class="see-media-btn responsive-hidden">See Media</button>
    <div id="mediaList" class="media-gallery hidden">
        {% for media in figure.mediaFiles %}
            <div class="media-item">
                {% if media.type == 'image' %}
                    <img src="{{ asset('/uploads/media/' ~ media.url) }}" alt="Media">
                {% elseif media.type == 'video' %}
                    <video controls>
                        <source src="{{ asset('/uploads/media/' ~ media.url) }}" type="video/mp4">
                    </video>
                {% endif %}
            </div>
        {% endfor %}
    </div>

    {# Tags Section #}
    <div class="tags">
        <span class="tag">Catégorie : {{ figure.categories }}</span>
        <span class="tag">Crée le : {{ figure.createdAt|date('d/m/Y H:i') }}</span>
        {% if figure.updatedAt %}
            <span class="tag">Modifier le : {{ figure.updatedAt|date('d/m/Y H:i') }}</span> 
        {% endif %}
    </div>

    {# Comments Section #}
    <div class="comments-section">
        <h2 class="section-title">Commentaires</h2>
        
        {% if app.user %}
            {{ form_start(commentForm, {'attr': {'class': 'comment-form'}}) }}
                <div class="comment-form-container">
                    {{ form_widget(commentForm.content, {
                        'attr': {
                            'class': 'comment-input',
                            'placeholder': 'Laissez un commentaire...'
                        }
                    }) }}
                    <button type="submit" class="submit-button">
                        Envoyer
                    </button>
                </div>
            {{ form_end(commentForm) }}
        {% endif %}

        <div class="comments-list">
            {% for comment in figure.comments %}
                <div class="comment">
                    <div class="avatar"></div>
                    <div class="comment-content">
                        <div class="comment-author">{{ comment.author }}</div>
                        <div class="comment-text">{{ comment.content }}</div>
                        <div class="comment-date">{{ comment.createdAt|date('d/m/Y H:i') }}</div>
                    </div>
                </div>
            {% else %}
                <p class="no-comments">Aucun commentaire pour le moment.</p>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}