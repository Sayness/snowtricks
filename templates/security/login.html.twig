{% extends 'base.html.twig' %}

{% block body %}
    {# Section principale pour le formulaire de connexion #}
    <div class="login-wrapper">
        <div class="login-container">
            {# Titre de la page de connexion #}
            <h1 class="login-title">Connexion</h1>
            
            {# Formulaire de connexion #}
            {{ form_start(form, {'attr': {'class': 'login-form'}}) }}
                {{ form_widget(form) }}
                
                {# Lien vers la page de réinitialisation de mot de passe #}
                <div class="forgot-password">
                    <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
                </div>

                {# Jeton CSRF pour sécuriser l'authentification #}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                
                {# Bouton pour soumettre le formulaire de connexion #}
                <button type="submit" class="login-button">Se Connecter</button>
            {{ form_end(form) }}

            {# Affichage des erreurs de connexion (si présentes) #}
            {% if error %}
                <div class="error-message">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
